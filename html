  <!-- Script de sesión y navegación -->
  <script>
    function mostrar(id) {
      document.querySelectorAll('.pantalla').forEach(p => p.classList.remove('activa'));
      document.getElementById(id).classList.add('activa');
    }

    function iniciarSesion() {
      const correo = document.getElementById('correo').value;
      const clave = document.getElementById('clave').value;
      if (correo && clave) {
        const nombre = correo.split('@')[0];
        localStorage.setItem('usuario', correo);
        localStorage.setItem('ecoPuntos', '0');

        document.getElementById('datoNombre').textContent = nombre;
        document.getElementById('datoCorreo').textContent = correo;
        document.getElementById('datoNivel').textContent = '🌱 Aprendiz Verde';

        document.getElementById('nombreUsuario').textContent = nombre;
        document.getElementById('aliasPerfil').textContent = nombre;
        document.getElementById('ecoTotal').textContent = '0';
        actualizarNivel(0);
        mostrar('revisarDatos');
      } else {
        alert('Por favor ingresa correo y contraseña.');
      }
    }

    function cerrarSesion() {
      localStorage.removeItem('usuario');
      localStorage.removeItem('ecoPuntos');
      mostrar('bienvenida');
    }

    function guardarAcciones() {
      const checkboxes = document.querySelectorAll('#formAcciones input[type="checkbox"]:checked');
      let puntos = 0;
      checkboxes.forEach(cb => puntos += parseInt(cb.value));
      let total = parseInt(localStorage.getItem('ecoPuntos') || '0') + puntos;
      localStorage.setItem('ecoPuntos', total);
      document.getElementById('ecoPuntosGanados').textContent = puntos;
      document.getElementById('mensajeAcciones').classList.remove('hidden');
      document.getElementById('ecoTotal').textContent = total;
      document.getElementById('barraProgreso').style.width = Math.min(total / 6, 100) + '%';
      actualizarNivel(total);
    }

    function actualizarNivel(puntos) {
      let nivel = '';
      if (puntos <= 100) nivel = '🌱 Aprendiz Verde';
      else if (puntos <= 300) nivel = '🥇 Explorador Verde';
      else if (puntos <= 600) nivel = '🛡️ Guardián del Planeta';
      else nivel = '🦸‍♀️ Héroe Ambiental';
      document.getElementById('nivelEcologico').textContent = nivel;
      document.getElementById('datoNivel').textContent = nivel;
    }

    window.onload = () => {
      const usuario = localStorage.getItem('usuario');
      const puntos = parseInt(localStorage.getItem('ecoPuntos') || '0');
      if (usuario) {
        const nombre = usuario.split('@')[0];
        document.getElementById('nombreUsuario').textContent = nombre;
        document.getElementById('aliasPerfil').textContent = nombre;
        document.getElementById('ecoTotal').textContent = puntos;
        document.getElementById('barraProgreso').style.width = Math.min(puntos / 6, 100) + '%';
        actualizarNivel(puntos);

        document.getElementById('datoNombre').textContent = nombre;
        document.getElementById('datoCorreo').textContent = usuario;
        document.getElementById('datoNivel').textContent = document.getElementById('nivelEcologico').textContent;

        mostrar('revisarDatos');
      }
    };
  </script>

</body>
